@model ASI.Basecode.Services.ServiceModels.BooksViewModel;

<div class="pt-5">

    <h1>Edit Book</h1>

    <form method="post" asp-action="Edit">
        <input type="hidden" class="form-control" asp-for="Id">
        <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control" asp-for="Title">
        </div>
        <div class="form-group">
            <label>Author</label>
            <input type="text" class="form-control" asp-for="Author">
        </div>
        <div class="form-group">
            <label>Descrption</label>
            <textarea class="form-control" rows="3" asp-for="Description"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>
