@{
    ViewData["Title"] = "Home Page";
}
<h5 style="text-align:center; font-size:50px;">Places i would love to visit!</h5>
<p style="text-align:center; font-size:20px;">
    I am John Loyd M. Ytang, <br />
    i would love to travel this beautiful places one day <br />
</p>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-50 mx-auto" src="/img/mountFuji.jpg" alt="Mount Fuji">
            <div class="carousel-caption d-none d-md-block">
                <h5>Mount Fuji</h5>
                <p>Japan</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-50 mx-auto" src="/img/maldives.jpg" alt="Maldives">
            <div class="carousel-caption d-none d-md-block">
                <h5 style="color:black">Maldives</h5>
                <p style="color:black">The Republic of Maldives</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-50  mx-auto" src="/img/niagara.jpg" alt="Niagara Falls">
            <div class="carousel-caption d-none d-md-block">
                <h5 style="color:black">Niagara Falls</h5>
                <p style="color:black">Ontario, Canada</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-50  mx-auto" src="/img/merlion.jpg" alt="Niagara Falls">
            <div class="carousel-caption d-none d-md-block">
                <h5>Merlion</h5>
                <p>Singapore</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
 </div>